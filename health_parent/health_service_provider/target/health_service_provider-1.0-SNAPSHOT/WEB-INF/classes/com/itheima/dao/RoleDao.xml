    <select id="findByUserId" parameterType="java.lang.Integer" resultType="com.itheima.pojo.Role">
        SELECT
            r.*
        FROM
            t_role As r,
            t_user_role AS ur
        WHERE
            r.id = ur.role_id
        AND
            ur.user_id = #{userId}
    </select>
</mapper>